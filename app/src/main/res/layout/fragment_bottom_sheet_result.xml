<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_background"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="32dp"
        tools:context=".ui.fragments.bottomsheets.BottomSheetResultFragment">

        <TextView
            android:id="@+id/title"
            style="@style/PrimaryTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Gangguan" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="16dp"
            android:background="@color/primary" />

        <TextView
            android:id="@+id/tv_definition"
            style="@style/Regular12Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:justificationMode="inter_word"
            tools:text="Penyebab gangguan kulit" />

        <TextView
            android:id="@+id/tv_cause_title"
            style="@style/PrimarySectionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cause" />

        <TextView
            android:id="@+id/tv_cause"
            style="@style/Regular12Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:justificationMode="inter_word"
            tools:text="Pengobatan gangguan kulit" />

        <TextView
            android:id="@+id/tv_prevention_title"
            style="@style/PrimarySectionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/treatment" />

        <TextView
            android:id="@+id/tv_prevention"
            style="@style/Regular12Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:justificationMode="inter_word"
            tools:text="Pencegahan gangguan kulit" />

        <TextView
            android:id="@+id/tv_avoided_ingredients_title"
            style="@style/PrimarySectionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bahan yang Perlu Dihindari" />

        <TextView
            android:id="@+id/tv_avoided_ingredients"
            style="@style/Regular12Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            tools:text="Pencegahan gangguan kulit" />
    </LinearLayout>
</ScrollView>